<head>
  <style type="text/css">
    table,th,td {border: 1px solid black;}
    thead {background: #9370DB; color: black; }
    tbody {background: #fff; color: black; }
    table {margin: auto; width: 100%;border-collapse: collapse;}
    th,td {padding:10px; text-align: center; font-size: 15px;}
    .links,tr:hover {background:  	#8A2BE2; color:#fff;}
  </style>
  <style>
    #links_to {
       text-decoration: none;
       display: inline-block;
       padding: 10px;
       font-size: 15px;
       width: 20px;
       text-align: center;
    }
    .back:hover {
       background-color: #ddd;
       color: black;
    }
    .next:hover {
       background-color: rgb(121, 37, 133);
       color: white;
    }
    .back {
       border-radius: 50%;
       background-color: #acacac;
       color: black;
    }
    .next {
       border-radius: 50%;
       background-color: rgb(68, 30, 112);
       color: white;
    }
  </style>
</head>
<h2><center>Orders</center></h2>
<div>
  <table class="index_table">
    <thead id="head">
      <tr>
        <th>Name</th>
        <th>Order Number </th>
        <th>Note</th>
        <th>Note</th>
        <th>financial_status </th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody id="ajax">
      <% @orderslist.each do |order| %>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.order_number  %></td>
          <td><%= order.customer.first_name %></td>
          <td><%= order.note %></td>
          <td><%= order.financial_status   %></td>
          <td><%= order.total_price  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <center>
    <% if !@orderslist.previous_page_info.nil? %>
      <%= link_to "<<", orderslisting_path(page_info: @orderslist.previous_page_info), id: "links_to", class: "back" %>
    <% end %>
    <% if !@orderslist.next_page_info.nil? %>
      <%= link_to ">>", orderslisting_path(page_info: @orderslist.next_page_info), id: "links_to", class: "next" %><br>
    <% end %>
  </center>
